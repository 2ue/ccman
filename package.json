{
  "name": "ccmam",
  "version": "3.3.9",
  "private": true,
  "description": "Manage Codex, Claude Code, Gemini CLI, and MCP API service provider configurations",
  "scripts": {
    "build": "pnpm --filter=!@ccman/desktop -r build",
    "dev:desktop": "pnpm --filter=@ccman/desktop dev",
    "build:all": "pnpm -r build",
    "test": "pnpm --filter=!@ccman/desktop -r test",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern 'packages/desktop/**'",
    "lint:fix": "eslint . --ext .ts,.tsx --ignore-pattern 'packages/desktop/**' --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r clean",
    "version": "node scripts/bump-version.js",
    "verify:versions": "node scripts/verify-versions.js",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 --config .changelogrc.js",
    "changelog:latest": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s --config .changelogrc.js",
    "changelog:dry": "conventional-changelog -p conventionalcommits --config .changelogrc.js",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "packages/core/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd packages/core && pnpm exec tsc --noEmit'"
    ],
    "packages/cli/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd packages/cli && pnpm exec tsc --noEmit'"
    ],
    "packages/desktop/**/*.{ts,tsx}": [
      "prettier --write",
      "bash -c 'cd packages/desktop && pnpm exec tsc --noEmit'"
    ]
  },
  "packageManager": "pnpm@9.15.9+sha512.68046141893c66fad01c079231128e9afb89ef87e2691d69e4d40eee228988295fd4682181bae55b58418c3a253bde65a505ec7c5f9403ece5cc3cd37dcf2531"
}
